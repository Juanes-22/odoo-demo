<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Create a new Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Property">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Create a new Estate Property">
                <header>
                    <button string="Sold" name="sold_property" type="object" class="oe_highlight"
                        states="new,offer_received,offer_accepted" />
                    <button string="Cancel" name="cancel_property" type="object"
                        states="new,offer_received,offer_accepted" />
                    <field name="state" widget="statusbar" colspan="2" options="{'clickable': 1}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16" />
                            <field name="property_tag_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create_edit': True}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="best_price" />
                            <field name="expected_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area"
                                        attrs="{'invisible': [('garden', '=', False)]}" />
                                    <field name="garden_orientation"
                                        attrs="{'invisible': [('garden', '=', False)]}" />
                                    <field name="total_area" />
                                </group>

                            </group>
                        </page>

                        <page string="Offers">
                            <field name="property_offer_ids"
                                attrs="{'readonly': ['|', '|', ('state', '=', 'offer_accepted'), ('state', '=', 'sold'), ('state', '=', 'cancelled')]}">
                                <tree>
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <field name="status" />
                                    <button name="accept_offer" type="object" title="Accept"
                                        icon="fa-check"
                                        attrs="{'invisible': [('status', '!=', False)]}" />
                                    <button name="refuse_offer" type="object" title="Refuse"
                                        icon="fa-times"
                                        attrs="{'invisible': [('status', '!=', False)]}" />
                                </tree>
                            </field>
                        </page>

                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="salesperson_id" />
                                    <field name="buyer_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property search">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_type_id" />

                <filter string="Available" name="active"
                    domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode"
                        context="{'group_by':'postcode', 'residual_visible':True}" />
                </group>
            </search>
        </field>
    </record>
</odoo>